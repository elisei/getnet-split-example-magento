            type="Getnet\SplitExampleMagento\Plugin\Getnet\PaymentMagento\Gateway\Request\FetchSubSellerIdToSplitPayment" />
    </type>
    <type name="Getnet\PaymentMagento\Gateway\Request\BoletoPaymentDataRequest">
